{
    "builders": [{
      "profile": "default",
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-042e8287309f5df03",
      "instance_type": "t3.medium",
      "ssh_username": "ubuntu",
      "ami_groups": "all",
      "ami_name": "Ubuntu-20-DevOps-Practice",
      "ami_regions": ["us-east-1"],
      "force_deregister": true,
      "force_delete_snapshot": true,
      "launch_block_device_mappings": [
        {
          "device_name": "/dev/sda1",
          "volume_type": "gp2",
          "volume_size": "10",
          "delete_on_termination": true
        }
      ],
      "tags": {
          "Name" : "Ubuntu-20-DevOps-Practice",
          "Created_By" : "Packer",
          "Base_AMI_Name": "{{ .SourceAMIName }}"
      }
    }],

    "provisioners": [
        {
          "type":  "shell",
          "inline": ["curl -s https://raw.githubusercontent.com/linuxautomations/aws-image-devops-session/master/ubuntu-20ami-setup.sh | sudo bash"]
        }]
}

